        <activity
            android:name="jp.keitai2013.heallin.LoginSelectorActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_login_selector"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="jp.keitai2013.heallin.HomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="jp.keitai2013.heallin.SettingsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="jp.keitai2013.heallin.ProfileActivity"
            android:configChanges="keyboardHidden|orientation"
