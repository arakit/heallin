        <activity
            android:name="jp.keitai2013.heallin.SearchActivity"
            android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="jp.keitai2013.heallin.ClothesActivity"
            android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait"
            android:label="@string/title_activity_clothes" >
        </activity>
        <activity
            android:name="jp.keitai2013.heallin.ClothesShopActivity"
            android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait"
            android:label="@string/title_activity_shop" >
        </activity>
        <activity
            android:name="jp.keitai2013.heallin.GoalSettingActivity"
            android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="portrait"
            android:label="@string/title_activity_goal_setting" >
        </activity>
